<%- include('../partials/header') %>

<div class='trainer-page-header'>
  <h3><%= title %></h3>
  <br>
  <img src="/images/trainercard1.png" alt="pokenav" width='250px' height='160px' id='poke-id'>
</div>

<div class="card" style="width: 36rem;" id='poke-info'>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="trainerinfo-tab" data-toggle="tab" href="#trainerinfo" role="tab"
        aria-controls="trainerinfo" aria-selected="true" onclick="bling()">My Info</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="updateinfo-tab" data-toggle="tab" href="#updateinfo" role="tab" aria-controls="updateinfo"
        aria-selected="false" onclick="bling()">Update Info</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pokemon-tab" data-toggle="tab" href="#pokemonTeam" role="tab" aria-controls="pokemonTeam"
        aria-selected="false" onclick="bling()">Pokemon</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="trainerinfo" role="tabpanel" aria-labelledby="trainerinfo-tab">
      <div class="card-body">
        <h5 class="card-title">Name: <%= user.name %></h5>
        <p class="card-text">Email: <%= user.email %></p>
        <p class="card-text">Bio: <%= user.bio %></p>
        <p class="card-text">Friend Code: <%= user.friendCode %></p>
      </div>
    </div>
    <div class="tab-pane fade show" id="pokemonTeam" role="tabpanel" aria-labelledby="pokemon-tab">
      <div class="card-body-pokemon">
        <% user.team.forEach(p => { %>
        <p><%= p.name.toUpperCase() %>
          <img src="<%= p.img %>" alt="sprite">
        </p>
        <% }) %>
      </div>
    </div>
    <div class="tab-pane fade" id="updateinfo" role="tabpanel" aria-labelledby="updateinfo-tab">
      <div class="card-body">
        <div class="tab-pane fade show active" id="updateinfo" role="tabpanel" aria-labelledby="updateinfo-tab">
          <div class="card-body">
            <form action="/users/trainer?_method=PUT" method="POST">
              <div class="form-row">
                <div class="col-md-4">
                  <label for="nickname">Trainer Name:</label>
                  <input type="text" id="userNickname" class="trainer-form" name="nickname"
                    value="<%= user.nickname %>">
                </div><br>
              </div>
              <div class="form-row">
                <div class="col-md-12">
                  <label for="avatarUrl">Avatar Image URL:</label>
                  <input type="text" id="avatarUrl" class="trainer-form" name="avatar" value="<%= user.avatar %>">
                </div>
              </div>
              <div class="form-row">
                <div class="col-md-12">
                  <label for="bio">Bio:</label>
                  <textarea rows="3" id="bio" class="trainer-form" name="bio"><%= user.bio %></textarea>
                </div>
              </div>
              <div class="form-row">
                <div class="col-md-4">
                  <label for="friendCode">Friend Code: </label>
                  <input type="text" required pattern="\d{4}-\d{4}-\d{4}" id="friendCode" class="trainer-form"
                    placeholder='####-####-####' name="friendCode" value="<%= user.friendCode %>">
                </div>
              </div>
              <button type="submit" onclick="saveSound()" style="margin-left: 100px;">Update</button>
          </div>
        </div>
      </div>
    </div>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>