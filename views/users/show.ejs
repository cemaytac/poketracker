<%- include('../partials/header') %>

<h2 style="margin-left: 20px;"><%= title %></h2>

<div class="card" id='user-card' style="width: 24rem; margin-left: 20px">
  <img id="avatarPhoto" style="height: 24rem;" class="card-img-top"
    src="<%= userInfo.avatar ? userInfo.avatar : '/images/redSprite.png'  %>" alt="Card image">
  <div class="card-header">
  </div>
  <div class="card-body">
    <h3 class="card-title"><%= userInfo.name %></h3>
    <p class="card-text">Joined: <%= userInfo.createdAt.toLocaleString() %></p>
    <p class="card-text">Bio: <%= userInfo.bio %></p>
    <p class="card-text">Email: <a href="mailto:<%= userInfo.email %>"><%= userInfo.email %></a></p>
    <p class="card-text">Friend Code: <%= userInfo.friendCode %></p>
    <p class="card-text">Pokemon Team: <% userInfo.team.forEach(p => { %>
      <p><%= p.name.toUpperCase() %>
        <img src="<%= p.img %>" alt="sprite">
      </p>
      <% }) %>
  </div>

  <%- include('../partials/footer') %>